use DBUniv1

select 
    c.Apellido,
    c.Direccion,
    p.Fecha_de_pedido,
    p.Monto_total,
    p.Estado,
    pa.Fecha_pago,
    pa.Metodo
from Clientes c
left join Pedidos p 
    on c.ID_cliente = p.ID_cliente
left join Pagos pa
    on p.ID_pedido = pa.ID_pedido
order by c.ID_cliente, p.Fecha_de_pedido desc;

_____________________________________________________________________________________________________________

select * from Clientes;

1 -- Operadores logicos

-- Like

select * from Clientes
where Nombre like 'J%';

-- In

select * from Clientes
where ID_cliente in(1,2,3);

-- Between

select * from Pedidos
where Monto_total between 200 and 500;

-- Agrupacion de datos

Select ID_pedido, SUM(4) as ID_cliente
from Pedidos
group by ID_pedido;

select * from Pedidos;

2 -- Clausula Group by

Select ID_pedido, AVG(Monto_total) as Monto
from Pedidos
group by ID_pedido;

-- Clausula having

Select ID_cliente
select Direccion, count(*) as Email 
from Clientes
group by Direccion
having COUNT(*) > 1; 

-- Clausula case

select ID_Pedido
Monto,
case
when Monto < 300 then 'Bajo'
when Monto between 300 and 500 then 'medio'
else 'alto'
end as ID_pago
from Pagos;

